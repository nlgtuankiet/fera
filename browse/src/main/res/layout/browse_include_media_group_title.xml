<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="leftText"
      type="String" />

    <variable
      name="rightText"
      type="String" />

    <variable
      name="type"
      type="String" />
  </data>

  <merge
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.nlgtuankiet.fera.browse.view.LeftEllipsizePairTextView
      android:id="@+id/name_and_count"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/left_image"
      app:leftStyle="@style/Body1"
      app:leftText="@{leftText}"
      app:rightStyle="@style/Body1"
      app:rightText="@{rightText}" />

    <TextView
      android:id="@+id/type"
      style="@style/Body1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:singleLine="true"
      android:text="@{type}"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/name_and_count" />
  </merge>
</layout>